<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center">
        <shape
            android:shape="rectangle"
            android:tint="@color/white">
            <corners android:radius="@dimen/_5sdp" />
            <size android:height="@dimen/_3sdp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center">
        <scale android:scaleWidth="100%">
            <selector>
                <item
                    android:drawable="@android:color/transparent"
                    android:state_enabled="false" />
                <item>
                    <shape
                        android:shape="rectangle"
                        android:tint="@color/theme_clr">
                        <corners
                            android:bottomLeftRadius="@dimen/_5sdp"
                            android:topLeftRadius="@dimen/_3sdp" />
                        <size android:height="@dimen/_3sdp" />
                        <solid android:color="@color/theme_clr" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>